<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qdu.buy.dao.CompanyDao">
    <resultMap id="BaseResultMap" type="com.qdu.buy.domain.po.Company">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="company_name" jdbcType="VARCHAR" property="companyName"/>
        <result column="short_name" jdbcType="VARCHAR" property="shortName"/>
        <result column="password" jdbcType="VARCHAR" property="password"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="status" jdbcType="CHAR" property="status"/>
        <result column="create_user" jdbcType="VARCHAR" property="createUser"/>
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime"/>
        <result column="update_user" jdbcType="VARCHAR" property="updateUser"/>
        <result column="update_time" jdbcType="TIMESTAMP" property="updateTime"/>
    </resultMap>
    <sql id="Base_Column_List">
        ID,city_id,USER_NAME,REAL_NAME,PASSWORD,SALT,MOBILE,phone,EMAIL,STATUS,first_login,remark,reason,
        CREATE_USER,CREATE_TIME,UPDATE_USER,UPDATE_TIME
    </sql>

    <select id="queryUserByCompanyNameAndPwd" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from company
        where company_name = #{companyName,jdbcType=VARCHAR}
        and password = #{password,jdbcType=VARCHAR}
    </select>

    <select id="queryUserByUserName" parameterType="java.lang.String" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_user
        where user_name = #{userName,jdbcType=VARCHAR}
    </select>

</mapper>